@model RegisterVM
@{
    Layout = null;
};

<!DOCTYPE html>
<html lang="en">
<head>
    <title>Register</title>
    <meta charset="utf-8" />
    <meta name="viewport"
          content="width=device-width, initial-scale=1, shrink-to-fit=no" />

    <link href="https://fonts.googleapis.com/css?family=Lato:300,400,700&display=swap"
          rel="stylesheet" />

    <link rel="stylesheet"
          href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" />

    <link rel="stylesheet" href="~/assets/css/login_register.css" />

    <link rel="stylesheet" href="~/assets/css/upload.css" />
</head>
<body>
    <section class="ftco-section">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-7 col-lg-5">
                    <div class="login-wrap p-4 p-md-5">
                        <h3 class="text-center mb-4">Sign Up</h3>
                        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                        <form  class="Register-form"
                              method="post"
                              enctype="multipart/form-data">
                            <div class="form-group">
                                <div class="container">
                                    <div class="panel">
                                        <div class="button_outer">
                                            <div class="btn_upload">
                                                <input type="file" asp-for="Photo" id="upload_file" />
                                                Upload Image
                                            </div>
                                            <div class="processing_bar"></div>
                                            <div class="success_box"></div>
                                        </div>
                                    </div>
                                </div>
                                <div class="error_msg"></div>
                                <div class="uploaded_file_view" id="uploaded_view">
                                    <span class="file_remove">X</span>
                                </div>
                            </div>
                            <div class="form-group">
                                <input id="username"
                                       asp-for="UserName"
                                       class="form-control rounded-left"
                                       placeholder="Username"
                                       required />
                                <span asp-validation-for="UserName" class="text-danger"></span>
                            </div>
                           
                            <div class="form-group">
                                <input id="email"
                                       asp-for="Email"
                                       class="form-control rounded-left"
                                       placeholder="Email"
                                       required />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <input id="Pass"
                                       asp-for="Password"
                                       class="form-control rounded-left"
                                       placeholder="Password"
                                       required />
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <input id="confirmPass"
                                       asp-for="CheckPassword"
                                       class="form-control rounded-left"
                                       placeholder="Confirm password "
                                       oninput="confirm()"
                                       required />
                                <span asp-validation-for="CheckPassword" class="text-danger"></span>
                            </div>
                            
                            <div id="msgAlert"
                                 class="alert alert-danger"
                                 role="alert"
                                 style="display: none">
                                Passwords don't match
                            </div>
                            <div class="form-group">
                                <button type="submit" 
                                        class="form-control btn btn-primary rounded submit px-3">
                                    Register
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <script src="~/assets/vendor/jquery/jquery.min.js"></script>
    <script src="~/assets/vendor/bootstrap/js/bootstrap.min.js"></script>
    <script src="~/assets/js/login_register.js"></script>
    <script src="~/assets/js/upload.js"></script>
</body>
</html>