@model SearchVM
@{
    ViewData["Title"] = "Search";
}

<!-- Page Content -->
<div class="container">
    <div class="row" style="margin-top: 4%; padding: 64px">
        <!-- Blog Entries Column -->
        <div class="col-md-8">
            <!-- Blog Post -->
            @if (Model.News !=null)
            {
                @foreach (var item in Model.News)
                {
                    <div class="card mb-4">
                        <div class="card-body">
                            <h2 class="card-title">@item.Title</h2>
                            <a asp-controller="News" asp-action="NewDetail" asp-route-NewsId="@item.Id" class="btn btn-primary">Read More &rarr;</a>
                        </div>
                        <div class="card-footer text-muted">@item.CreateTime</div>
                    </div>
                }

            }
            @if(Model.IsNull == true)
            {
                <div class="card mb-4">
                    <div class="card-body">
                        <h2 class="card-title">Not found news</h2>

                    </div>

                </div>
            }
                
                
            
                      
            <ul class="pagination justify-content-center mb-4">
                <li class="page-item">
                    <a href="?pageno=1" class="page-link">First</a>
                </li>
                <li class="page-item">
                    <a href="2" class="page-link">Prev</a>
                </li>
                <li class="page-item">
                    <a href="3" class="page-link">Next</a>
                </li>
                <li class="page-item">
                    <a href="?pageno=9" class="page-link">Last</a>
                </li>
            </ul>
            <!-- Pagination -->
        </div>
        <!-- Sidebar Widgets Column -->
        <div class="col-md-4">
            <!-- Search Widget -->
            <div class="card mb-4">
                <h5 class="card-header">Search</h5>
                <div class="card-body">
                    <form name="search" asp-action="Search" asp-controller="News" method="post" enctype="multipart/form-data">
                        <div class="input-group">
                            <input type="text"
                                   name="searchtitle"
                                   class="form-control"
                                   placeholder="Search for..."
                                   required />
                            <span class="input-group-btn">
                                <button type="submit" class="btn btn-secondary">Go!</button>
                            </span>

                        </div>

                    </form>
                </div>
            </div>
            <!-- Categories Widget -->
            <div class="card my-4">
                <h5 class="card-header">Categories</h5>
                <div class="card-body">
                    <div class="row">
                        <div class="col-lg-6">
                            <ul class="list-unstyled mb-0">
                                @foreach (var item in Model.Categories)
                                {
                                    <li>
                                        <a asp-action="Index" asp-controller="Category" asp-route-CategoryId="@item.Id">@item.Name</a>
                                    </li>
                                }
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Side Widget -->
            <div class="card my-4">
                <h5 class="card-header">Recent News</h5>
                <div class="card-body">
                    <ul class="mb-0">
                        @foreach (var item in Model.Allnews)
                        {
                            <li>
                                <a asp-controller="News" asp-action="NewDetail" asp-route-NewsId="@item.Id">@item.Title</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <!-- /.row -->
</div>