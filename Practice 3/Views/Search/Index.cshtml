 <!-- Page Content -->
<div class="container">
    <div class="row" style="margin-top: 4%; padding: 64px">
        <!-- Blog Entries Column -->
        <div class="col-md-8">
            <!-- Blog Post -->
            <div class="card mb-4">
                <div class="card-body">
                    <h2 class="card-title">Post title</h2>
                    <a href="news-details.html" class="btn btn-primary">Read More &rarr;</a>
                </div>
                <div class="card-footer text-muted">Posted on {someDate}</div>
            </div>
            <ul class="pagination justify-content-center mb-4">
                <li class="page-item">
                    <a href="?pageno=1" class="page-link">First</a>
                </li>
                <li class="page-item">
                    <a href="2" class="page-link">Prev</a>
                </li>
                <li class="page-item">
                    <a href="3" class="page-link">Next</a>
                </li>
                <li class="page-item">
                    <a href="?pageno=9" class="page-link">Last</a>
                </li>
            </ul>
            <!-- Pagination -->
        </div>
        <!-- Sidebar Widgets Column -->
        <div class="col-md-4">
            <!-- Search Widget -->
            <div class="card mb-4">
                <h5 class="card-header">Search</h5>
                <div class="card-body">
                    <form name="search" action="search.html" method="post">
                        <div class="input-group">
                            <input type="text"
                                   name="searchtitle"
                                   class="form-control"
                                   placeholder="Search for..."
                                   required />
                            <span class="input-group-btn">
                                <button class="btn btn-secondary" type="submit">Go!</button>
                            </span>
                        </div>
                    </form>
                </div>
            </div>
            <!-- Categories Widget -->
            <div class="card my-4">
                <h5 class="card-header">Categories</h5>
                <div class="card-body">
                    <div class="row">
                        <div class="col-lg-6">
                            <ul class="list-unstyled mb-0">
                                <li>
                                    <a href="category.html">Category name</a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Side Widget -->
            <div class="card my-4">
                <h5 class="card-header">Recent News</h5>
                <div class="card-body">
                    <ul class="mb-0">
                        <li>
                            <a href="news-details.html">Some recent news</a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <!-- /.row -->
</div>