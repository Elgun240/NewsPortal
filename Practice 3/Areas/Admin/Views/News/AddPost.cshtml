@model NewsAddVM
@{
    ViewData["Title"] = "AddPost";
}

<!-- Start content -->
<div class="content">
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <div class="page-title-box">
                    <h4 class="page-title">Add Post</h4>
                    <ol class="breadcrumb p-0 m-0">
                        <li>
                            <a href="#">Post</a>
                        </li>
                        <li>
                            <a href="#">Add Post </a>
                        </li>
                        <li class="active">Add Post</li>
                    </ol>
                    <div class="clearfix"></div>
                </div>
            </div>
        </div>
        <!-- end row -->
        <div class="row">
            <div class="col-sm-6">
                <!---Success Message--->
                @if (ViewData.ModelState.ContainsKey("Success"))
                {
                    <div class="alert alert-success" role="alert">
                        <strong>@ViewData.ModelState["Success"].Errors.FirstOrDefault().ErrorMessage</strong>
                    </div>
                }

                <!---Error Message--->
                @if (ViewData.ModelState.ContainsKey("Error"))
                {
                    <div class="alert alert-danger" role="alert">
                        <strong>@ViewData.ModelState["Error"].Errors.FirstOrDefault().ErrorMessage</strong>
                    </div>
                }
            </div>
        </div>
        <div class="row">
            <div class="col-md-10 col-md-offset-1">
                <div class="p-6">
                    <div class="">
                        <form  enctype="multipart/form-data" method="post" asp-action="AddPost" asp-controller="News">
                            <div class="form-group m-b-20">
                                <label for="exampleInputEmail1">Post Title</label>
                                <input type="text"
                                       class="form-control"
                                       asp-for="Title"
                                       placeholder="Enter title"
                                       required />
                            </div>
                            <div class="form-group m-b-20">
                                <label for="exampleInputEmail1">Category</label>
                                <select class="form-control"
                                        asp-for="@Model.CategoryId"
                                        id="category"
                                        onChange=""
                                        required>
                                    @foreach (var item in Model.Categories)
                                    {
                                        
                                        <option value="@item.Id">@item.Name</option>
                                        
                                    }
                                </select>
                            </div>

                            <div class="form-group m-b-20">
                                <label for="exampleInputEmail1">Sub Category</label>
                                <select class="form-control"
                                        asp-for="@Model.SubCategoryId"
                                        id="subcategory"
                                        required>
                                 @foreach (var item in Model.SubCategories)
                                    {

                                        <option value="@item.Id">@item.Name</option>
                                    }
                                    
                                </select>
                            </div>

                            <div class="row">
                                <div class="col-sm-12">
                                    <div class="card-box">
                                        <h4 class="m-b-30 m-t-0 header-title">
                                            <b>Post Details</b>
                                        </h4>
                                        <textarea class="summernote"
                                                 asp-for="Description"
                                                  required></textarea>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-12">
                                    <div class="card-box">
                                        <h4 class="m-b-30 m-t-0 header-title">
                                            <b>Post Image</b>
                                        </h4>
                                        <input asp-for="Photo"
                                               class="form-control"
                                               id="postimage"
                                               
                                               required />
                                        <span class="text-danger" asp-validation-for="@Model.Photo"></span>
                                    </div>
                                    
                                </div>
                            </div>
                            <button type="submit"  class="btn btn-success waves-effect waves-light">
                              
                                Save and Post
                            </button>
                            <a asp-action="Index" asp-controller="Home" asp-area="Admin"
                                    class="btn btn-danger waves-effect waves-light">
                                Discard
                            </a>
                        </form>
                    </div>
                </div>
                <!-- end p-20 -->
            </div>
            <!-- end col -->
        </div>
    </div>
    <!-- container -->
</div>
