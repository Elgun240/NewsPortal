@model NewsEditVM
@{
    ViewData["Title"] = "Edit";
}

<!-- Start content -->
<div class="content">
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <div class="page-title-box">
                    <h4 class="page-title">Edit Post</h4>
                    <ol class="breadcrumb p-0 m-0">
                        <li>
                            <a href="#">Admin</a>
                        </li>
                        <li>
                            <a href="#"> Posts </a>
                        </li>
                        <li class="active">Add Post</li>
                    </ol>
                    <div class="clearfix"></div>
                </div>
            </div>
        </div>
        <!-- end row -->
        <div class="row">
            <div class="col-sm-6">
                <!---Success Message--->
                @if (ViewData.ModelState.ContainsKey("Success"))
                {
                    <div class="alert alert-success" role="alert">
                        <strong>@ViewData.ModelState["Success"].Errors.FirstOrDefault().ErrorMessage</strong>
                    </div>
                }

                <!---Error Message--->
                @if (ViewData.ModelState.ContainsKey("Error"))
                {
                    <div class="alert alert-danger" role="alert">
                        <strong>@ViewData.ModelState["Success"].Errors.FirstOrDefault().ErrorMessage</strong>
                    </div>
                }
            </div>
        </div>
        <div class="row">
            <div class="col-md-10 col-md-offset-1">
                <div class="p-6">
                    <div class="">
                        <form name="addpost" method="post" asp-controller="News" asp-action="Edit">
                            <div class="form-group m-b-20">
                                <label for="exampleInputEmail1">Post Title</label>
                                <input type="text"
                                       class="form-control"
                                       
                                       asp-for="@Model.Title"
                                       placeholder="@Model.EditedNew.Title"
                                       required />
                            </div>
                            
                            <div class="form-group m-b-20">
                                <label for="exampleInputEmail1">Category</label>
                                <select class="form-control"
                                        asp-for="@Model.CategoryId"
                                        id="category"
                                        required>
                                    @foreach (var item in Model.Categories)
                                    {
                                        <option value="@item.Id">@item.Name</option>
                                    }
                                    
                                </select>
                            </div>
                            <div class="form-group m-b-20">
                                <label for="exampleInputEmail1">Sub Category</label>
                                <select class="form-control"
                                        asp-for="@Model.SubCategoryId"
                                        id="subcategory"
                                        required>
                                   @foreach (var item in Model.SubCategories)
                                    {
                                        <option value="@item.Id">@item.Name</option>
                                    }
                                   
                                </select>
                            </div>
                            <div class="row">
                                <div class="col-sm-12">
                                    <div class="card-box">
                                        <h4 class="m-b-30 m-t-0 header-title">
                                            <b>Post Details</b>
                                        </h4>
                                        <textarea class="summernote"
                                                  asp-for="@Model.Description"
                                                  
                                                  required>
                                                  @Model.EditedNew.Description</textarea>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-12">
                                    <div class="card-box">
                                        <h4 class="m-b-30 m-t-0 header-title">
                                            <b>Post Image</b>
                                        </h4>
                                        <img @Model.Image
                                             width="300" />
                                        <br />
                                        <a asp-action="UpdatePhoto" asp-controller="News" asp-route-id="@Model.EditedNew.Id">Update Image</a>
                                    </div>
                                </div>
                            </div>
                            <button type="submit"
                               name="update"
                               class="btn btn-success waves-effect waves-light">
                                Update
                            </button>
                        </form>
                    </div>
                </div>
                <!-- end p-20 -->
            </div>
            <!-- end col -->
        </div>
        <!-- end row -->
    </div>
    <!-- container -->
</div>
<!-- content -->

