@model List<News>
@{
    ViewData["Title"] = "Trash";
}
<!-- Start content -->
        <div class="content">
          <div class="container">
            <div class="row">
              <div class="col-xs-12">
                <div class="page-title-box">
                  <h4 class="page-title">Trashed Posts</h4>
                  <ol class="breadcrumb p-0 m-0">
                    <li>
                      <a href="#">Admin</a>
                    </li>
                    <li>
                      <a href="#">Posts</a>
                    </li>
                    <li class="active">Trashed Posts</li>
                  </ol>
                  <div class="clearfix"></div>
                </div>
              </div>
            </div>
            <!-- end row -->

            <div class="row">
              <div class="col-sm-6">
                @if (ViewData.ModelState.ContainsKey("Success"))
                {
                    <div class="alert alert-success" role="alert">
                        <strong>@ViewData.ModelState["Success"].Errors.FirstOrDefault().ErrorMessage</strong>
                    </div>
                }

                <!---Error Message--->
                @if (ViewData.ModelState.ContainsKey("Error"))
                {
                    <div class="alert alert-danger" role="alert">
                        <strong>@ViewData.ModelState["Error"].Errors.FirstOrDefault().ErrorMessage </strong>
                    </div>
                }
              </div>
             </div>
              <div class="row">
                <div class="col-sm-12">
                  <div class="card-box">
                    <div class="table-responsive">
                      <table
                        class="table table-colored table-centered table-inverse m-0"
                      >
                        <thead>
                          <tr>
                            <th>Title</th>
                            <th>Category</th>
                            <th>Subcategory</th>
                            <th>Action</th>
                          </tr>
                        </thead>
                       @foreach (var item in Model)
                                {
                                    <tbody>


                                        <tr>
                                            <td><b>@item.Title</b></td>
                                            <td>@item.Category.Name</td>
                                            <td>@item.SubCategory.Name</td>

                                            <td>
                                                <a asp-action="Return" asp-route-id="@item.Id">
                                                    <i class="fa fa-pencil"
                                                       style="color: #29b6f6"></i>
                                                </a>
                                                &nbsp;<a asp-action="Delete" asp-route-id="@item.Id"
                                                         onclick="return confirm('Do you reaaly want to delete ?')">
                                                    <i class="fa fa-trash-o"
                                                       style="color: #f05050"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    </tbody>
                                }
                      </table>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <!-- container -->
         
          <!-- content -->

