@model DashboardVM
@{
    ViewData["Title"] = "Index";
}
<!-- Start content -->
<div class="content">
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <div class="page-title-box">
                    <h4 class="page-title">Dashboard</h4>
                    <ol class="breadcrumb p-0 m-0">
                        <li>
                            <a asp-controller="Home" asp-action="Index" asp-area="">NewsPortal</a>
                        </li>
                        <li>
                            <a href="#">Admin</a>
                        </li>
                        <li class="active">Dashboard</li>
                    </ol>
                    <div class="clearfix"></div>
                </div>
            </div>
        </div>
        <!-- end row -->

        <div class="row">
            <a asp-action="Manage" asp-controller="Categories">
                <div class="col-lg-4 col-md-4 col-sm-6">
                    <div class="card-box widget-box-one">
                        <i class="mdi mdi-chart-areaspline widget-one-icon"></i>
                        <div class="wigdet-one-content">
                            <p class="m-0 text-uppercase font-600 font-secondary text-overflow"
                               title="Statistics">
                                Categories Listed
                            </p>
                            <h2>
                                @Model.CategoryCount
                                <small></small>
                            </h2>
                        </div>
                    </div>
                </div>
            </a><!-- end col -->
            <a asp-action="ManageSubCategory" asp-controller="SubCategories">
                <div class="col-lg-4 col-md-4 col-sm-6">
                    <div class="card-box widget-box-one">
                        <i class="mdi mdi-layers widget-one-icon"></i>
                        <div class="wigdet-one-content">
                            <p class="m-0 text-uppercase font-600 font-secondary text-overflow"
                               title="User This Month">
                                Listed Subcategories
                            </p>
                            <h2>
                                @Model.SubCategoriesCount
                                <small></small>
                            </h2>
                        </div>
                    </div>
                </div>
                <!-- end col -->
            </a>
            <a asp-action="Manage" asp-controller="News">
                
                <div class="col-lg-4 col-md-4 col-sm-6">
                    <div class="card-box widget-box-one">
                        <i class="mdi mdi-layers widget-one-icon"></i>
                        <div class="wigdet-one-content">
                            <p class="m-0 text-uppercase font-600 font-secondary text-overflow"
                               title="User This Month">
                                Live News
                            </p>
                            <h2>
                               @Model.NewsCount
                                <small></small>
                            </h2>
                        </div>
                    </div>
                </div>
                <!-- end col -->
            </a>
        </div>
        <!-- end row -->

        <div class="row">
            <a asp-action="Trash" asp-controller="News">
                
                <div class="col-lg-4 col-md-4 col-sm-6">
                    <div class="card-box widget-box-one">
                        <i class="mdi mdi-layers widget-one-icon"></i>
                        <div class="wigdet-one-content">
                            <p class="m-0 text-uppercase font-600 font-secondary text-overflow"
                               title="User This Month">
                                Trash News
                            </p>
                            <h2>
                                @Model.TrashNewsCount
                                <small></small>
                            </h2>
                        </div>
                    </div>
                </div>
            </a>
        </div>
    </div>
    <!-- container -->
</div>
<!-- content -->