@model ManageCategoriesVM
@{
    ViewData["Title"] = "Manage";
}


    
    <!-- Start content -->
    <div class="content">
        <div class="container">
            <div class="row">
                <div class="col-xs-12">
                    <div class="page-title-box">
                        <h4 class="page-title">Manage Categories</h4>
                        <ol class="breadcrumb p-0 m-0">
                            <li>
                                <a href="#">Admin</a>
                            </li>
                            <li>
                                <a href="#">Category </a>
                            </li>
                            <li class="active">Manage Categories</li>
                        </ol>
                        <div class="clearfix"></div>
                    </div>
                </div>
            </div>
            <!-- end row -->
            <div class="row">
                <div class="col-sm-6">
                @if (ViewData.ModelState.ContainsKey("Success"))
                {
                    <div class="alert alert-success" role="alert">
                        <strong>@ViewData.ModelState["Success"].Errors.FirstOrDefault().ErrorMessage</strong>
                    </div>
                }
                @if (ViewData.ModelState.ContainsKey("Error"))
                {
                    <div class="alert alert-danger" role="alert">
                        <strong>@ViewData.ModelState["Error"].Errors.FirstOrDefault().ErrorMessage</strong>
                    </div>
                }
               
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="demo-box m-t-20">
                            <div class="m-b-30">
                                <a asp-controller="Categories" asp-action="Create">
                                    <button id="addToTable"
                                            class="btn btn-success waves-effect waves-light">
                                        Add <i class="mdi mdi-plus-circle-outline"></i>
                                    </button>
                                </a>
                            </div>
                            <div class="table-responsive">
                                <table class="table m-0 table-colored-bordered table-bordered-primary">

                                    <thead>
                                        <tr>
                                            <th>#</th>
                                            <th>Category</th>
                                            <th>Description</th>
                                            <th>Posting Date</th>
                                            <th>Last updation Date</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                                @foreach (var item in Model.Categories)
                                    {
                                     
                                        <tbody>
                                            <tr>
                                                <th scope="row">@item.Id</th>
                                                <td>@item.Name</td>
                                                <td>@item.Desctiption</td>
                                                <td>@item.CreatedDate</td>
                                                <td>@item.LastUpddationTime</td>
                                                <td>
                                                    <a asp-controller="Categories" asp-action="Edit" asp-route-id="@item.Id">
                                                        <i class="fa fa-pencil"
                                                           style="color: #29b6f6"></i>
                                                    </a>
                                                    &nbsp;<a asp-controller="Categories" asp-action="Deactive" asp-route-id="@item.Id">
                                                        <i class="fa fa-trash-o"
                                                           style="color: #f05050"></i>
                                                    </a>
                                                </td>
                                            </tr>
                                        </tbody>
                                        }
                                   
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
                <!--- end row -->
                <div class="row">
                    <div class="col-md-12">
                        <div class="demo-box m-t-20">
                            <div class="m-b-30">
                                <h4><i class="fa fa-trash-o"></i> Deleted Categories</h4>
                            </div>
                            <div class="table-responsive">
                                <table class="table m-0 table-colored-bordered table-bordered-danger">
                                    <thead>
                                        <tr>
                                            <th>#</th>
                                            <th>Category</th>
                                            <th>Description</th>
                                            <th>Posting Date</th>
                                            <th>Last updation Date</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    @foreach (var item in Model.DeactivedCategories)
                                    {
                                        
                                        <tbody>
                                            <tr>
                                                <th scope="row">@item.Id</th>
                                                <td>@item.Name</td>
                                                <td>@item.Desctiption</td>
                                                <td>@item.CreatedDate</td>
                                                <td>@item.LastUpddationTime</td>
                                                <td>
                                                    <a asp-action="Restore" asp-controller="Categories" asp-route-id="@item.Id">
                                                        <i class="ion-arrow-return-right"
                                                           title="Restore this category"></i>
                                                    </a>
                                                    &nbsp;<a asp-action="Delete" asp-controller="Categories" asp-route-id="@item.Id"
                                                             title="Delete forever">
                                                        <i class="fa fa-trash-o"
                                                           style="color: #f05050"></i>
                                                    </a>
                                                </td>
                                            </tr>
                                        </tbody>
                                    }
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- container -->
        </div>
        <!-- content -->

